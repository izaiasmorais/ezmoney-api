{
	"name": "ezmoney-api",
	"version": "1.0.0",
	"description": "API do EZMoney",
	"type": "module",
	"main": "server.js",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsup src --out-dir dist",
		"start": "node dist/server.js",
		"migrate": "pnpm prisma migrate dev",
		"generate": "pnpm prisma generate",
		"studio": "pnpm prisma studio -b chrome -p 5174",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"test:ui": "vitest --ui",
		"test": "vitest run --no-file-parallelism",
		"test:watch": "vitest --no-file-parallelism",
		"test:cov": "vitest run --coverage --no-file-parallelism",
		"health": "pnpm tsc --noEmit && pnpm lint"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.0",
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^22.7.0",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.34.0",
		"@typescript-eslint/parser": "^8.34.0",
		"@vitest/coverage-v8": "3.1.2",
		"@vitest/ui": "3.1.2",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"npm-run-all": "4.1.5",
		"prettier": "^3.6.2",
		"prisma": "^6.11.1",
		"supertest": "^7.0.0",
		"tsup": "^8.3.5",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"unplugin-swc": "^1.5.1",
		"vite-tsconfig-paths": "^4.0.5",
		"vitest": "^3.1.2"
	},
	"dependencies": {
		"@fastify/cors": "^10.0.1",
		"@fastify/jwt": "^9.0.1",
		"@fastify/swagger": "^9.0.0",
		"@fastify/swagger-ui": "^5.0.1",
		"@prisma/client": "^6.11.1",
		"bcrypt": "^5.1.1",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.5",
		"fastify": "^5.0.0",
		"fastify-plugin": "^5.0.1",
		"fastify-type-provider-zod": "^4.0.2",
		"uuid": "^11.0.3",
		"vitest-environment-prisma": "link:prisma/vitest-environment-prisma",
		"zod": "^3.23.8"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"bcrypt",
			"esbuild",
			"prisma"
		]
	}
}
