{
	"name": "ezmoney-api",
	"version": "1.0.0",
	"description": "API do EZMoney",
	"type": "module",
	"main": "server.js",
	"scripts": {
		"dev": "node --env-file .env --experimental-strip-types --no-warnings --watch src/server.ts",
		"start": "node --env-file .env --experimental-strip-types --no-warnings src/server.ts",
		"health": "pnpm tsc --noEmit",
		"docker": "docker compose up -d",
		"generate": "npx drizzle-kit generate",
		"migrate": "npx drizzle-kit migrate",
		"studio": "npx drizzle-kit studio --port=5555",
		"seed": "node --env-file .env --experimental-strip-types --no-warnings src/db/seed.ts",
		"erd": "drizzle-erd --in ./src/db/schema/index.ts --out erd.svg"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^22.7.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-seed": "^0.3.1",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"@fastify/cors": "^10.0.1",
		"@fastify/jwt": "^9.0.1",
		"@fastify/swagger": "^9.0.0",
		"@fastify/swagger-ui": "^5.0.1",
		"bcrypt": "^5.1.1",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.44.2",
		"fastify": "^5.0.0",
		"fastify-plugin": "^5.0.1",
		"fastify-type-provider-zod": "^4.0.2",
		"postgres": "^3.4.7",
		"uuid": "^11.0.3",
		"zod": "^3.23.8"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"bcrypt",
			"esbuild",
			"prisma"
		]
	}
}
